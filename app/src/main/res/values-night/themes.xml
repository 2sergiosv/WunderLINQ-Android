<resources>

    <!-- Dark base activity theme -->
    <style name="WLQTheme" parent="Theme.AppCompat.DayNight">
        <item name="themeName">dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="primaryTextColor">@color/white</item>
        <item name="iconTintColor">@color/white</item>
        <item name="itemHighlight">@color/colorAccent</item>
        <item name="highlightedTextColor">@color/white</item>
        <item name="backgroundColor">@color/black</item>
        <item name="buttonColor">@color/white</item>
        <item name="buttonTextColor">@color/black</item>

        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:textColor">@color/white</item>

        <item name="wunderLINQLogo">@drawable/wunderlinq_logo_white</item>
        <item name="gridViewBorder">@drawable/border_white</item>

        <item name="taskTextColor">@color/white</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/black</item>
    </style>
</resources>