            android:title="@string/pref_autoNightModeDelay_name"
            android:summary="@string/pref_autoNightModeDelay_summary"
            android:defaultValue="30"
            android:inputType="number"
            android:key="prefAutoNightModeDelay" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/alerting_title" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="prefTPMSAlert"
            android:summary="@string/pref_tpmsAlert_summary"
            android:title="@string/pref_tpmsAlert_name" >
        </CheckBoxPreference>
        <EditTextPreference
            android:dependency="prefTPMSAlert"
            android:title="@string/pref_tpmsAlertThreshold_name"
            android:summary="@string/pref_tpmsAlertThreshold_summary"
            android:defaultValue="30"
            android:inputType="number"
            android:key="prefTPMSAlertThreshold" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="prefFuelAlert"
            android:summary="@string/pref_fuelAlert_summary"
            android:title="@string/pref_fuelAlert_name" >
        </CheckBoxPreference>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/advanced_settings_title" >
